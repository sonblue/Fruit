<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fruit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".controller.MyApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.ThemSanPham" android:parentActivityName=".views.activities.MainActivity"/>
        <activity android:name=".views.activities.LoginActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".views.activities.RegisterActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".views.activities.ChiTietSanPham" android:parentActivityName=".views.activities.MainActivity"/>
    </application>

</manifest>